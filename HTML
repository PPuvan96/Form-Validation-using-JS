<!DOCTYPE html>
<html>

<head>
    <title>Form Validation</title>
    <link rel="stylesheet" type="text/css" href="form.css">
</head>

<body>
    <h1>Login To Coding Market</h1>
    <form id="Form">
        <div class="input-container">
            <label for="userName">Email or Username</label>
            <input type="text" id="userName" name="userName">
        </div>
        <div class="input-container">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
        </div>
        <div id="error" class="error-message"></div>
        <button type="button" onclick="resultForm()">LOGIN</button>
        <div id="output"></div>
    </form>
    <script>

        function resultForm() {
            var userName = document.getElementById("userName").value;
            var password = document.getElementById("password").value;
            var output = document.getElementById("output");
            var error = document.getElementById("error");
            var result = true;
            var errorMessage = "";

            if (userName.length == 0 && password.length == 0) {
                errorMessage = "Please enter your email/username and password.<br>";
                result = false;
            }

            else {
                if (userName.length == 0) {
                    errorMessage = "Email or Username is required.<br>";
                    result = false;
                } else if (userName.length < 4 || userName.length > 12) {
                    errorMessage = "Email or Username should be between 4 and 12 characters long.<br>";
                    result = false;
                }

                if (password.length == 0) {
                    errorMessage = "Enter your password.<br>";
                    result = false;
                } else if (password.length < 6 || password.length > 12) {
                    errorMessage = "Password should be between 6 and 12 characters long.<br>";
                    result = false;
                }
            }

            if (result) {
                output.innerHTML = "LOGIN SUCCESSFUL";
                error.innerHTML = "";
            } else {
                error.innerHTML = errorMessage;
                error.style.color = "red";
            }
        }

    </script>
</body>

</html>
